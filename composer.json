{
    "name": "joshdifabio/future-process",
    "description": "Process execution for PHP using futures and promises",
    "keywords": ["process", "child-process", "promise", "react"],
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Di Fabio",
            "email": "joshdifabio@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "react/promise": "~1.0|~2.0",
        "react/event-loop": "~0.3.4|~0.4.1",
        "react/stream": "~0.3.4|~0.4.2",
        "clue/block-react": "~0.1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.5|~4.0",
        "symfony/process": "~2.2",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "FutureProcess\\": "src"
       }
    },
    "autoload-dev": {
        "psr-4": {
            "FutureProcess\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3-dev"
        }
    }
}
